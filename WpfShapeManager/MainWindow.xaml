<Window x:Class="ShapeManagerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Shape Manager" Height="500" Width="700">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10">
            <Button Content="Add Circle" Width="100" Height="30" Click="AddCircleButton_Click" Margin="5"/>
            <Button Content="Add Rectangle" Width="100" Height="30" Click="AddRectangleButton_Click" Margin="5"/>
            <Button Content="Add Triangle" Width="100" Height="30" Click="AddTriangleButton_Click" Margin="5"/>
        </StackPanel>

        <Canvas Name="DrawingCanvas" Background="White" Margin="10,50,10,10"/>
    </Grid>
</Window>
